    <EmbeddedResource Include="Resources\Fonts\Quattrocento_BoldItalic.ttf" />
    <EmbeddedResource Include="Resources\Fonts\Quattrocento_Italic.ttf" />
    <EmbeddedResource Include="Resources\Fonts\Quattrocento_Regular.ttf" />
    <EmbeddedResource Include="Resources\Fonts\Questrial_Regular.ttf" />
