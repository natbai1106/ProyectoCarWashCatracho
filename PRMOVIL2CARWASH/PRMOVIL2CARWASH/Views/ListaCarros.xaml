             xmlns:local="clr-namespace:PRMOVIL2CARWASH.ViewModels"  
             xmlns:model="clr-namespace:PRMOVIL2CARWASH.Models"  
              BackgroundColor="#f3f4f6">
    <ContentPage.BindingContext>
        <local:ListVehiclesViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>

        <!--x:DataType="local:ListVehiclesViewModel" Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}"-->
        <ScrollView  >

            <StackLayout>
                <ListView x:Name="lstListaCarros"
                      Margin="2" 
                      HasUnevenRows="true"
                      ItemTapped="ListaCarros_ItemTapped"
                      ItemsSource="{Binding VehiclesList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout >

                                <Frame 
                                CornerRadius="25"
                                HasShadow="False"
                                Margin="10,5">

                                    <!--x:DataType="model:ListVehicles"-->
