                                            >

                                        <Frame 
                                        CornerRadius="100"
                                        HasShadow="False"
                                        HeightRequest="100" 
                                        WidthRequest="100" 
                                        BackgroundColor="Aqua">
                                            <!--Source="{Binding TransportType}"-->
                                            <!-- Place to go-->
                                            <Image 
                                           Source="imgcarro.png"/>
                                        </Frame>


                                        <!-- Place description-->
                                        <StackLayout>
                                            <!---->
                                            <Label Text="{Binding numeroPlaca}" 
                                               FontAttributes="Bold"
                                               TextColor="#535257" 
                                               FontFamily="SansBold"
                                               FontSize="18" />

                                            <!--{Binding Description}-->
                                            <Label Text="{Binding marca}" 
                                               FontFamily="SansRegular"
                                               FontSize="18"
                                               TextColor="Silver"/>

                                            <Button 
                                               Text="Actualizar" 
                                               FontFamily="SansBold"
                                               TextColor="white"
                                               CornerRadius="05"
                                               BackgroundColor="#01ADBA"/>
                                            <!--<Label Text="{Binding Adress2}" FontSize="15" TextColor="Silver"/>-->
                                        </StackLayout>

                                    </StackLayout>
                                </Frame>
                            </StackLayout>


                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
