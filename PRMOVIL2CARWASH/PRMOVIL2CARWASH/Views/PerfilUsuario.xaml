<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRMOVIL2CARWASH.Views.PerfilUsuario">

    <StackLayout>

        <Image 
                Source="perfilusuario.png" 
                HeightRequest="300"
                WidthRequest="300"
                VerticalOptions="Center" 
                Margin="25,10"/>

        <Frame 
                CornerRadius="55" 
                Margin="0,-10,0,-20" 
                BackgroundColor="#E3E4E5" 
                HasShadow="True" 
                HeightRequest="0" 
                VerticalOptions="EndAndExpand"/>

        <StackLayout 
            BackgroundColor="#E3E4E5" 
            HeightRequest="300">

            <!-- INICIO DEL BOTON DE CONFIGURAR PERFIL -->
            <Button 
                x:Name="btnConfigurarPerfil"
                        BackgroundColor="#01ADBA" 
                        ImageSource="editar.png" 
                        BorderColor="Black" 
                        BorderWidth="4" 
                        CornerRadius="40" 
                        Margin="0,-60,75,-70" 
                        HeightRequest="65" 
                        WidthRequest="65" 
                        HorizontalOptions="End" 
                        VerticalOptions="End"
                Clicked="btnConfigurarPerfil_Clicked"/>

            <!-- INICIO DEL BOTON DE CAMBIAR CONTRASENIA-->
                <Button 
                        BackgroundColor="#01ADBA" 
                        ImageSource="cambiar_contrasenia.png" 
                        BorderColor="Black" 
                        BorderWidth="4" 
                        CornerRadius="40" 
                        Margin="0,0,5,-160" 
                        HeightRequest="65" 
                        WidthRequest="65" 
                        HorizontalOptions="End" 
                        VerticalOptions="End"
                    />

                <Label 
                Margin="30,150,0,0">

                <Label.FormattedText>

                    <FormattedString>
                        <Span 
                            Text="Nombre de Usuario &#10;" 
                            FontSize="30"
                            LineHeight="4"
                            FontAttributes="Bold" 
                            ForegroundColor="Black" />
                        <Span 
                            Text="Correo Electrónico &#10;" 
                            FontSize="20" 
                            LineHeight="2"
                            ForegroundColor="Black" />
                        <Span 
                            Text="Numero de Teléfono" 
                            FontSize="20" 
                            ForegroundColor="Black" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </StackLayout>
    </StackLayout>

</ContentPage>