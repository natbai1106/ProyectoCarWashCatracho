<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRMOVIL2CARWASH.Views.Reservacion"
             BackgroundImage="fondo.jpg">
    <ContentPage.Content>
        <StackLayout Margin="2,5">


        <!-- TARJETA COLOR BLANCO -->
        <Frame
                BackgroundColor="#F5F5F5F5"
                CornerRadius="15"
                HasShadow="True"
                HeightRequest="800"
                Margin="10,15">

            <StackLayout
                      Margin="5,15">

                <!--Titulo -->
                <Label 
                            Text="Reservación de Espacio para Servicio"
                            HorizontalOptions="Center"
                            TextColor="black"
                            FontFamily="Racing"
                            FontSize="25"/>
                <!--Scroll -->
                <ScrollView>

                    <!-- Contenedor principal para la tarjeta-->
                    <StackLayout 
                            Margin="5,5">

                        <!--Texto Numero-->
                        <StackLayout
                                Orientation="Horizontal"
                                Margin="0,15,0,0">

                            <Label 
                                Text="*"
                                FontSize="25"
                                TextColor="red"
                                FontFamily="Questrial"/>

                            <Label 
                                Text="Fecha a Realizar:  "
                                TextColor="Black"
                                FontSize="20"                                 
                                FontFamily="Questrial"/>

                        </StackLayout>

                        <!-- Estilo para el Entry Redondo-->
                        <Frame
                                BackgroundColor="Transparent" 
                                BorderColor="Black"                             
                                Padding="0"
                                CornerRadius="50" 
                                WidthRequest="340"
                                Margin="20,0,15,0">

                            <!--Contenedor del Input Numero-->
                            <StackLayout
                                     Orientation="Horizontal"
                                     Margin="25,5">

                                <Image 
                                        Source="calendario.png"/>

                                <DatePicker  
                                        x:Name="DatapickerFecha" 
                                        Margin="0,0,10,0"
                                        IsEnabled="False"
                                        Background="#EEEDED"
                                        Format="dd/MM/yyyy"
                                        MinimumDate="01/01/1871"
                                        MaximumDate="12/31/9998"
                                        FontSize="20"
                                        TextColor="Gray"
                                        HorizontalOptions="FillAndExpand"  
                                         />
                            </StackLayout>
                        </Frame>

                        <!--Texto Servicio-->
                        <StackLayout
                                Orientation="Horizontal"
                                Margin="0,15,0,0">

                            <Label 
                                Text="*"
                                FontSize="25"
                                TextColor="red"
                                FontFamily="Questrial"/>

                            <Label 
                                Text="Seleccione el Servicio Auto: "
                                TextColor="Black"
                                FontSize="20"                                 
                                FontFamily="Questrial"/>

                        </StackLayout>

                        <!-- Estilo para el Entry Redondo-->
                        <Frame
                                BackgroundColor="Transparent" 
                                BorderColor="Black"                             
                                Padding="0"
                                CornerRadius="50" 
                                WidthRequest="340"
                                Margin="20,0,15,0">

                            <!--Contenedor del Input Modelo-->
                            <StackLayout
                                     Orientation="Horizontal"
                                     Margin="25,5">

                                <Image 
                                        Source="servicio.png"/>

                                <Picker
                                        x:Name="PiServicioCotizacion"
                                        Title="Seleccione Servicio"
                                        FontSize="20"
                                        FontFamily="Questrial"
                                        Margin="0,0,10,0"
                                        />
                            </StackLayout>
                        </Frame>

                        <!--Texto Automovil-->
                        <StackLayout
                                Orientation="Horizontal"
                                Margin="0,15,0,0">

                            <Label 
                                Text="*"
                                FontSize="25"
                                TextColor="red"
                                FontFamily="Questrial"/>

                            <Label 
                                Text="Seleccione el Automóvil: "
                                TextColor="Black"
                                FontSize="20"                                 
                                FontFamily="Questrial"/>

                        </StackLayout>

                        <!-- Estilo para el Entry Redondo-->
                        <Frame
                                BackgroundColor="Transparent" 
                                BorderColor="Black"                             
                                Padding="0"
                                CornerRadius="50" 
                                WidthRequest="340"
                                Margin="20,0,15,0">

                            <!--Contenedor del Input Modelo-->
                            <StackLayout
                                     Orientation="Horizontal"
                                     Margin="25,5">

                                <Image 
                                        Source="Auto.png"/>

                                <Picker
                                        x:Name="PiAutoCotizacion"
                                        Title="Seleccione Servicio"
                                        FontSize="20"
                                        FontFamily="Questrial"
                                        Margin="0,0,10,0"
                                        />
                            </StackLayout>
                        </Frame>


                        <!--Texto Servicio Adomicilio-->
                        <StackLayout
                                Orientation="Horizontal"
                                Margin="0,15,0,0">

                            <Label 
                                    Text="Servicio Adomicilio: "
                                    TextColor="Black"
                                    FontSize="20"                                 
                                    FontFamily="Questrial"/>

                            <Switch 
                                    OnColor="gray"
                                    ThumbColor="#01ADBA"
                                    />

                        </StackLayout>


                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>